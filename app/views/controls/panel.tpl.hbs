<div class="panel-{{this.model._id}}">
<div class="panel panel-{{this.model.status}} col-xs-12 col-sm-12 col-md-6 col-lg-4 remove-side-padding job-panel">
    <div class="panel-heading {{#if this.model.collapsed}}collapsed{{/if}}" data-toggle="collapse" href="#collapse-{{this.model._id}}" aria-expanded="false" aria-controls="collapse-{{this.model._id}}">
        <span class="pull-right">
                    <i class="fa {{this.model.icon}}"></i>
                </span>
        <input type="checkbox" id="{{this.model._id}}" class="job-checkbox job-checkbox-{{this.model._id}}" name="{{this.model._id}}" />
        <h4 class="text-center panel-title"><strong>Job # {{this.model._id}}</strong></h4>
        <p><span>Old Box URL :</span> <a href="{{this.model.oldBoxId}}" class="box-link">{{this.model.oldBox}}</a></p>
        <p><span>New Box URL :</span> <a href="{{this.model.newBoxId}}" class="box-link">{{this.model.newBox}}</a></p>
        <p><span>Script Type :</span> {{this.model.scriptName}}</p>
        <p><span>Last Ran On :</span> {{this.model.date}}</p>
    </div>
    <ul class="list-group collapse {{#if this.model.collapsed}}{{else}}in{{/if}}" {{#if this.model.collapsed}}style="height:0;"{{else}}style="height:auto;"{{/if}} id="collapse-{{this.model._id}}">
        <li class="list-group-item execution-list">
            <ul class="list-group">
                {{#each this.model.executions.models}}
                <li class="list-group-item clearfix list-group-item-{{this.attributes.status}}">
                    <div class="row-action-primary">
                        <i class="pull-right fa {{this.attributes.icon}}"></i>
                    </div>
                    <div class="row-content">
                        <a href="#job/view/id/{{this.attributes._id}}">ID# {{this.attributes._id}}</a>
                    </div>
                </li>
                <div class="list-group-separator"></div>
                {{/each}}
            </ul>
        </li>
        <li class="list-group-item list-group-item-{{this.model.status}} clearfix">
            <span class="pull-right">
                        <a href="#job/edit/id/{{this.model._id}}" class="btn btn-material-blue-A900 btn-info" data-id="{{this.model._id}}"><i class="fa fa-pencil"></i></a>
                        <a href"#" class="btn btn-material-red-A700 job-delete-btn-{{this.model._id}}" data-id="{{this.model._id}}"><i class="fa fa-trash-o"></i></a>
                    </span>
            <span class="pull-left">
                        <a href="#" class="btn btn-default run-btn-{{this.model._id}} btn-material-green-A400" data-id="{{this.model._id}}"><i class="fa fa-play"></i></a>
                    </span>
        </li>
    </ul>
</div>
</div>
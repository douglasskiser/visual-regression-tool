<div class="container">
    <form class="form-signin" id="{{id}}-form">
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <h2 class="form-signin-heading text-center">Please Sign In</h2>    
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <label for="{{id}}-username" class="sr-only">Email</label>
                <input type="text" id="{{id}}-username" class="form-control username {{id}}-field" placeholder="Email" required autofocus>
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="{{id}}-password" class="form-control password {{id}}-field" placeholder="Password" required>
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <button class="btn btn-lg btn-primary btn-block submit" id="{{id}}-submit" type="submit">Sign In</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-sm-12 col-md-4 col-md-offset-4">
            <div class="pull-right">
                <button class="btn-link signup" id="{{id}}-signup" type="button">Sign Up</button>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <form class="form-signin" id="{{id}}-form">
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <h2 class="form-signin-heading">Please sign up</h2>
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <label for="{{id}}-username" class="sr-only">Username</label>
                <input type="text" id="{{id}}-username" class="form-control username {{id}}-field" placeholder="Email" required autofocus>
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="{{id}}-password" class="form-control password {{id}}-field" placeholder="Password" required>
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <label for="confirmPassword" class="sr-only">Confirm Password</label>
                <input type="password" id="{{id}}-confirm" class="form-control confirm {{id}}-field" placeholder="Confirm Password" required>
            </div>
        </div>
        <div class="row margin-top">
            <div class="col-sm-12 col-md-4 col-md-offset-4">
                <button class="btn btn-lg btn-primary btn-block signup-submit" id="{{id}}-submit" type="submit">Sign-Up</button>
            </div>
        </div>
    </form>
</div>